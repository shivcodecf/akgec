//// code1

#include <iostream>
using namespace std;

int main()
{   
    
    int n;
    cin >>n;
    
    int m = n*2-1;
    
    int c=1,space=m/2;
    
    for(int i=1;i<=n;i++)
    {    
        int check=0,cnt=0;
        
       for(int j=1;j<=m;j++)
       {
           if(check<space)
           {
               cout <<" "<<" ";
               check++;
           }
           else {
               
               if(cnt<c)
               {
                   cout <<"*"<<" ";
                   cnt++;
               }
               else {
                   cout <<" "<<" ";
               }
               
           }
       }
        cout <<endl;
       
       space-=1;
       c+=2;
      
    }
    
    
    
    space=1,c=m-2;
    
     for(int i=1;i<=n;i++)
    {    
        int check=0,cnt=0;
        
       for(int j=1;j<=m;j++)
       {
           if(check<space)
           {
               cout <<" "<<" ";
               check++;
           }
           else {
               
               if(cnt<c)
               {
                   cout <<"*"<<" ";
                   cnt++;
               }
               else {
                   cout <<" "<<" ";
               }
               
           }
       }
        cout <<endl;
       
        space+=1;;
         c-=2;
      
    }
    
    
}



